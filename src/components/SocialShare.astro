---
// data imports
import * as site from "../data/site.json";

const { siteName, author, url, description } = site;
---

<aside class="social-share">
    <h3>Share {siteName} with your friends!</h3>
    <section>
        <a
            href={`https://www.facebook.com/sharer/sharer.php?u=` + url}
            title="Share on Facebook"
            target="_blank"
            rel="noopener">
            <i class="fab fa-facebook"></i> Share on Facebook
        </a>
        <a
            href={`https://x.com/intent/tweet?url=` + url + `&text=` + siteName}
            title="Share on X / Twitter"
            target="_blank"
            rel="noopener">
            <i class="fa-brands fa-x-twitter"></i> Share on X / Twitter
        </a>
        <a
            href={`https://www.linkedin.com/shareArticle?mini=true&url=` +
                url +
                `&title=` +
                siteName +
                `&summary=` +
                description}
            title="Share on LinkedIn"
            target="_blank"
            rel="noopener">
            <i class="fab fa-linkedin"></i> Share on LinkedIn
        </a>
        <a
            href={`https://pinterest.com/pin/create/button/?url=` +
                url +
                `&description=` +
                description}
            title="Share on Pinterest"
            target="_blank"
            rel="noopener">
            <i class="fab fa-pinterest"></i> Share on Pinterest
        </a>
        <a
            href={`mailto:?subject=` +
                siteName +
                `&body=` +
                description +
                `%20` +
                url}
            title="Share via Email"
            target="_blank"
            rel="noopener">
            <i class="fas fa-envelope"></i> Share via Email
        </a>
    </section>
</aside>

<style lang="scss">
    @use "../styles/variables" as vars;

    aside {
        margin: 2rem auto;
        padding: 1rem;

        @media screen and (min-width: 768px) {
            display: block;
            float: left;
            margin: 0 2rem 2rem 0;
            width: 25%;
        }

        & > section {
            display: flex;
            align-items: center;
            justify-content: center;

            @media screen and (min-width: 768px) {
                flex-direction: column;
                align-items: start;
                justify-content: start;
            }

            h3 {
                font-size: 1rem;
                margin-bottom: 1rem;
            }

            a {
                display: block;
                margin-bottom: 1rem;
                text-decoration: none;
            }
        }
    }
</style>
