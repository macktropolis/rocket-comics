---
// data imports
import * as site from "../data/site.json";

const { siteName, author, url, description } = site;
---

<aside class="social-share">
    <div class="bigbox">
        <h3>Share {siteName} with your friends!</h3>
        <section>
            <a
                href={`https://www.facebook.com/sharer/sharer.php?u=` + url}
                title="Share on Facebook"
                target="_blank"
                rel="noopener">
                <i class="fab fa-facebook"></i> Facebook
            </a>
            <a
                href={`https://x.com/intent/tweet?url=` +
                    url +
                    `&text=` +
                    siteName}
                title="Share on X / Twitter"
                target="_blank"
                rel="noopener">
                <i class="fa-brands fa-x-twitter"></i> X/Twitter
            </a>
            <a
                href={`https://www.linkedin.com/shareArticle?mini=true&url=` +
                    url +
                    `&title=` +
                    siteName +
                    `&summary=` +
                    description}
                title="Share on LinkedIn"
                target="_blank"
                rel="noopener">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            <a
                href={`https://pinterest.com/pin/create/button/?url=` +
                    url +
                    `&description=` +
                    description}
                title="Share on Pinterest"
                target="_blank"
                rel="noopener">
                <i class="fab fa-pinterest"></i> Pinterest
            </a>
            <a
                href={`mailto:?subject=` +
                    siteName +
                    `&body=` +
                    description +
                    `%20` +
                    url}
                title="Share via Email"
                target="_blank"
                rel="noopener">
                <i class="fas fa-envelope"></i> Email
            </a>
        </section>
    </div>
</aside>

<style lang="scss">
    @use "../styles/variables" as vars;

    aside {
        margin: 2rem auto;
        padding: 0;
        width: 95%;

        @media screen and (min-width: 768px) {
            display: block;
            float: left;
            margin: 2rem 2rem 2rem 0;
            width: 25%;
        }

        & section {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;

            @media screen and (min-width: 768px) {
                flex-direction: column;
                align-items: center;
                justify-content: start;
            }

            h3 {
                font-size: 1rem;
                margin-bottom: 1rem;
            }

            a {
                display: block;
                margin-bottom: 1rem;
                text-decoration: none;
            }
        }
    }

    .bigbox {
        background-color: hsl(0, 0%, 95%, 0.25);
        border: 10px solid hsl(0, 0%, 95%, 1);
        border-radius: 20px;
        border-top-left-radius: 0;
        border-bottom-right-radius: 0;
        padding: 1rem;
        position: relative;
        width: 100%;

        &:before {
            background-color: hsl(0, 0%, 95%, 1);
            border-radius: 0;
            border-top-right-radius: 5px;
            color: vars.$bg-clr-primary;
            content: "Share";
            font-family: vars.$ff-display;
            font-weight: bold;
            height: 50px;
            left: -10px;
            padding: 1rem 2rem;
            position: absolute;
            text-transform: uppercase;
            top: -50px;
            width: fit-content;
            z-index: -1;
        }
    }
</style>
