        width: 95%;
        max-width: 110ch;

        h2 {
            margin-bottom: 0;
        }

        p {
            small {
                font-size: 0.7rem;
            }
        }
    }
    .gallery-images {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        justify-content: center;
        margin: 0 auto;
        max-width: 95%;
        padding: 0;
        -webkit-perspective: 0;
        perspective: 0;
    }
